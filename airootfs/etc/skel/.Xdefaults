! Цветовая схема

! Normal
! color0    black
! color1    red
! color2    green
! color3    yellow
! color4    blue (синий)
! color5    purple (фиолетовый)
! color6    cyan (голубой)
! color7    white

URxvt.color0:    #000000
URxvt.color1:    #C00000
URxvt.color2:    #00C000
URxvt.color3:    #C0C000
URxvt.color4:    #0C00C0
URxvt.color5:    #AA00AA
URxvt.color6:    #00AAAA
URxvt.color7:    #FFFFFF
!
! Light
! color8    darkgray
! color9    red
! color10    green
! color11    yellow
! color12    blue (синий)
! color13    purple (фиолетовый)
! color14    cyan (голубой)
! color15    lightgray

URxvt.color8:    #212121
URxvt.color9:    #FF8080
URxvt.color10:    #80FF80
URxvt.color11:    #FFFF88
URxvt.color12:    #99CCFF
URxvt.color13:    #B14CC2
URxvt.color14:    #9BFFFF
URxvt.color15:    #D0D0D0


! Установка шрифта 
URxvt.font: xft:Droid Sans Mono:pixelsize=13:antialias=true
URxvt.boldFont: xft:Droid Sans Mono:pixelsize=13:antialias=true
URxvt.letterSpace: -2 
!URxvt.font: xft:Dejavu Sans Mono:pixelsize=13:antialias=true
!URxvt.boldFont: xft:Dejavu Sans Bold:pixelsize=13:antialias=true
!URxvt.font: xft:Inconsolata:pixelsize=16:antialias=true


! Цвет фона
URxvt.background: black
! Цвет текста
!URxvt.foreground: #d8d5a9
URxvt.foreground: white
! Выделение подчеркнутого текста синим [ссылок]
URxvt.underlineColor: white

! Цвет курсора
URxvt.cursorColor: green
! Мерцание курсора
URxvt.cursorBlink: true
! Скроллбар: присутствует
URxvt.scrollBar: false


! работа с плагинами 
URxvt.perl-ext-common: selection-to-clipboard,keyboard-select,resize-font,matcher,clipboard,url-select
!URxvt.perl-lib: ~/.urxvt/ext
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: firefox
URxvt.url-select.autocopy: false
Rxvt.keysym.M-s: perl:keyboard-select:search
URxvt.clipboard.copycmd:  xsel -ip
URxvt.clipboard.pastecmd: xsel -op
!URxvt.clipboard.copycmd:  xclip -i -selection clipboard
!URxvt.clipboard.pastecmd: xclip -o -selection clipboard
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

! Псевдопрозрачность
URxvt.transparent: true
! Уменьшение (-100 .. -1) или увеличение (0 .. 100) яркости прозрачного фона
URxvt.shading: 10
